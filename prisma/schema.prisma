generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Read DB URL from .env
}

model User {
  uid      Int    @id @default(autoincrement())
  uname    String @unique
  password String
}

model Product {
  productid  Int      @id @default(autoincrement())
  category   Category @relation(fields: [categoryId], references: [categoryId])
  categoryId Int
  name       String
  price      String
  stock      String
  imageUrl   String?
  createdBy  String
  createdAt  DateTime @default(now())
  updateBy   String
  updateAt   DateTime @default(now())
}

model Category {
  categoryId Int       @id @default(autoincrement())
  name       String
  createdBy  String
  createdAt  DateTime  @default(now())
  updateBy   String
  updateAt   DateTime  @default(now())
  Product    Product[]
}

model Event {
  eventId       Int      @id @default(autoincrement())
  name          String
  imageEventUrl String?
  show          Int
  createdBy     String
  createdAt     DateTime @default(now())
  updateBy      String
  updateAt      DateTime @default(now())
}

