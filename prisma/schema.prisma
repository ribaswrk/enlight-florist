generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Read DB URL from .env
}

model User {
  uid      Int    @id @default(autoincrement())
  uname    String @unique
  password String

  @@map("User")
}

model Product {
  productid     Int            @id @default(autoincrement())
  category      Category       @relation(fields: [categoryId], references: [categoryId])
  categoryId    Int
  name          String
  price         String
  promoPrice    String         @default("0")
  soldqty       String         @default("0")
  homeView      Int            @default(0)
  addFlag       Int            @default(0)
  addVal        String         @default("") @db.VarChar(255)
  description   String         @default("")
  createdBy     String
  createdAt     DateTime       @default(now())
  updateBy      String
  updateAt      DateTime       @default(now())
  ProductImage  productImage[]
  Subcategory   Subcategory?   @relation(fields: [subcategoryId], references: [subcategoryId])
  subcategoryId Int?           @default(0)

  @@map("Product")
}

model productImage {
  id        Int      @id @default(autoincrement())
  Product   Product  @relation(fields: [productid], references: [productid])
  productid Int
  imageUrl  String?  @db.Text
  createdBy String
  createdAt DateTime @default(now())

  @@map("ProductImage")
}

model Category {
  categoryId  Int           @id @default(autoincrement())
  name        String
  imageCatUrl String?       @db.Text
  homeView    Int           @default(0)
  createdBy   String
  createdAt   DateTime      @default(now())
  updateBy    String
  updateAt    DateTime      @default(now())
  Product     Product[]
  Subcategory Subcategory[]

  @@map("Category")
}

model Subcategory {
  subcategoryId  Int       @id @default(autoincrement())
  subcatname     String
  imageSubCatUrl String?   @db.Text
  homeView       Int       @default(0)
  createdBy      String
  createdAt      DateTime  @default(now())
  updateBy       String
  updateAt       DateTime  @default(now())
  category       Category  @relation(fields: [categoryId], references: [categoryId])
  categoryId     Int
  Product        Product[]

  @@map("Subcategory")
}

model Event {
  eventId       Int      @id @default(autoincrement())
  name          String
  imageEventUrl String?  @db.Text
  show          Int
  createdBy     String
  createdAt     DateTime @default(now())
  updateBy      String
  updateAt      DateTime @default(now())

  @@map("Event")
}

